@using WebProjesi.Helper;
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Emeltek Kurumsal Web Sitesi</h5>
                    <address>
                        <strong>
                            @ViewBag.Iletisim.Adres
                        </strong>

                    </address>
                    <p>
                        <i class="icon-phone"></i>Tel:@ViewBag.Iletisim.Telefon  <br>
                        <i class="icon-phone"></i>Whatsapp:@ViewBag.Iletisim.Whatsapp  <br>
                        <i class="icon-envelope-alt"></i> Fax:@ViewBag.Iletisim.Fax   
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="/Anasayfa">Ana sayfa </a></li>
                        <li><a href="/Hakkimizda">Hakkımızda</a></li>
                        <li><a href="/BlogPost">Blog</a></li>
                        <li><a href="/Hizmetlerimiz">Hizmetler</a></li>
                        <li><a href="/Iletisim">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Yazılar</h5>
                    <ul class="link-list">
                        @foreach (var item in ViewBag.Blog)
                        {
                            <li><a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">@item.Baslik</a></li>
                        }


                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in ViewBag.Hizmetler)
                        {
                            <img src="@item.ResimURL" width="75" height="30" />
                        }

                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p>&copy; @DateTime.Now.Year   EMELTEK BIYOMEDIKAL YAZILIM BILIŞIM TÜM HAKKI SAKLIDIR.</p>
                        <div class="credits">

                            Designed by <a href="https://KurumsalWebProjesi.com/">KurumsalWeb</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a href="https://www.facebook.com/emeltek.yazilim/" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        @*<li><a href="https://www.facebook.com/@ViewBag.Iletisim.Facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>*@
                        <li><a href="https://www.instagram.com/emeltekyazilim/" data-placement="top" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="https://www.linkedin.com/company/emeltek-yaz%C4%B1l%C4%B1m/?viewAsMember=true" data-placement="top" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>